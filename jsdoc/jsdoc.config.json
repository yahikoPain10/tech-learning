{
  "plugins": [
    "plugins/markdown"
  ],
  "source": {
    "include": ["lib"],
    "exclude": ["lib/ignore.js"]
  },
  "opts": {
    "template": "templates/default",
    "destination": "docs",
    "recurse": true,
    "readme": "README.md"
  },
  "templates": {
    "default": {
      "staticFiles": {
        "include": ["public"]
      },
      "includeDate": false
    }
  }
}